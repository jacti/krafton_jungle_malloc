{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug mdriver",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/bin/mdriver",
            "args": [
                "-V",
                // "-f",
                // "short1-bal.rep",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build mdriver"
        }
    ]
}